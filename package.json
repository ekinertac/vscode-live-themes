{
  "name": "live-themes",
  "displayName": "Live Theme Previewer",
  "description": "A live theme previewer for Visual Studio Code",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ekinertac/vscode-live-themes.git"
  },
  "publisher": "ekinertac",
  "author": {
    "name": "Ekin Erta√ß",
    "email": "ekinertac@gmail.com"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "homepage": "https://github.com/ekinertac/vscode-live-themes",
  "bugs": {
    "email": "ekinertac@gmail.com",
    "url": "https://github.com/ekinertac/vscode-live-themes/issues"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "galleryBanner": {
    "color": "#FFB732",
    "theme": "dark"
  },
  "pricing": "Free",
  "keywords": [
    "search",
    "find",
    "replace",
    "search in project",
    "jetbrains search",
    "jetbrains"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "live-themes.logToConsole",
        "title": "Live Themes: Open Theme Selector"
      }
    ],
    "keybindings": [
      {
        "command": "live-themes.logToConsole",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "build": "npm run compile && npm run vscode:prepublish && vsce package -o dist",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/sinon": "^10.0.20",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "axios": "^1.7.7",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "jsonc-parser": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "sinon": "^19.0.0",
    "strip-json-comments": "^5.0.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@sentry/node": "^8.30.0"
  }
}
